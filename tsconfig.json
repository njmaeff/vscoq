{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__fixtures__/**",
    "**/__tests__/**"
  ]
}
