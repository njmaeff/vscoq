{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@njmaeff/private-*": ["util/*"],
      "@njmaeff/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__fixtures__/**/*.ts",
    "src/**/__tests__/**/*.ts"
  ]
}
