// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}", "--folder-uri=/workspace/__fixtures__"],
			"outFiles": ["${workspaceRoot}/out/client/**/*.js"],
			"preLaunchTask": {
				"type": "npm",
				"script": "compile"
			}
		},
		{
			"type": "node",
			"request": "attach",
			"protocol": "inspector",
			"name": "Attach to Server",
			"port": 6005,
			"restart": true,
			"outFiles": ["${workspaceRoot}/out/server/**/*.js"]
        }
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Launch Client", "Attach to Server"]
		}
	]
}
